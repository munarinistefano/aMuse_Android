<!-- DEFINIZIONE DEL LAYOUT "CONTENITORE" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

   	<LinearLayout
   	    android:id="@+id/LinearLayout1"
   	    android:layout_width="match_parent"
        android:layout_height="match_parent"
   	    android:gravity="center"
   	    android:orientation="vertical"
   	    android:layout_centerHorizontal="true" >

   	    <!-- CONTENUTO DEL LAYOUT INTERNO -->

   		<ImageView
   		    android:id="@+id/Photo"
   		    android:layout_width="wrap_content"
   		    android:layout_height="70dp"
   		    android:gravity="top"
   		    android:maxHeight="100dp"
   		    android:scaleType="centerInside"
   		    android:src="@drawable/title_tab" />

   		   		<TextView
   		    android:id="@+id/textView1"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:fontFamily="Verdana"
   		    android:gravity="top"
   		    android:text="Selected Works"
   		    android:textColor="@color/black"
   		    android:textSize="14sp"
   		    android:textStyle="bold" />

   		   		    	    <TextView
      		android:id="@+id/textView4"
      		android:layout_width="wrap_content"
   		   	android:layout_height="wrap_content"
		  	android:layout_centerHorizontal="true"
      		android:text="Remember that you can send only 20 works!"
      		android:textColor="@color/black"
      		android:paddingBottom="5dp"
      		android:textSize="14dp" />	
   		   		
   	    <!-- CHECK BOXES -->
   	    
   	    <ListView
   	        android:id="@+id/listView1"
   	        android:layout_width="match_parent"
   	        android:layout_height="150dp" />

	    <Button
	        android:id="@+id/button1"
	        style="@style/red_button"
	        android:layout_width="120dp"
	        android:layout_height="50dp"
	        android:background="@drawable/red_button"
	        android:fontFamily="Droid Sans"
	        android:text="Send"
	        android:textSize="20sp"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:text="@string/credits"
	        android:textColor="@color/black" />
	    
   	</LinearLayout>
</RelativeLayout>