<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:right="20dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#CCCCCC"
                android:endColor="#999999"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:right="20dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>